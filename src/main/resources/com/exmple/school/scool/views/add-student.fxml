<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.exmple.school.scool.Controllers.AddStudentController"
      style="-fx-padding: 30; -fx-background-color: #1a2b49;">

    <Label text="Add New Student" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e0aa3e;" />

    <TextField fx:id="idField" promptText="ID"
               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8; -fx-background-color: #f0f0f0; -fx-border-color: #e0aa3e; -fx-text-fill: #1a2b49;" />

    <TextField fx:id="nameField" promptText="Name"
               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8; -fx-background-color: #f0f0f0; -fx-border-color: #e0aa3e; -fx-text-fill: #1a2b49;" />

    <TextField fx:id="emailField" promptText="Email"
               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8; -fx-background-color: #f0f0f0; -fx-border-color: #e0aa3e; -fx-text-fill: #1a2b49;" />

    <TextField fx:id="phoneField" promptText="Phone"
               style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 8; -fx-background-color: #f0f0f0; -fx-border-color: #e0aa3e; -fx-text-fill: #1a2b49;" />

    <ComboBox fx:id="genderComboBox" promptText="Gender"
              style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 6; -fx-border-color: #e0aa3e; -fx-text-fill: #1a2b49;" />

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: transparent; -fx-text-fill: #e0aa3e; -fx-border-color: #e0aa3e; -fx-border-radius: 8; -fx-padding: 8 16; -fx-cursor: hand;" />
        <Button text="Add" onAction="#handleAddStudent"
                style="-fx-background-color: #e0aa3e; -fx-text-fill: #1a2b49; -fx-background-radius: 8; -fx-padding: 8 16; -fx-cursor: hand;" />
    </HBox>

</VBox>
